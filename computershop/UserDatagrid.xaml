<Window x:Class="computershop.UserDatagrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:computershop"
        mc:Ignorable="d"
        Title="UserDatagrid" Height="450" Width="800">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- DataGrid -->
            <RowDefinition Height="Auto" />
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Felhasználók listája -->
        <DataGrid x:Name="UsersDataGrid"
                  Grid.Row="0"
                  AutoGenerateColumns="True"
                  Margin="0,0,0,10" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="CreateButton" Content="Create" Width="100" Height="30" />
            <Button x:Name="ReadButton" Content="Read" Width="100" Height="30" />
            <Button x:Name="UpdateButton" Content="Update" Width="100" Height="30" />
            <Button x:Name="DeleteButton" Content="Delete" Width="100" Height="30" />
        </StackPanel>

    </Grid>
</Window>
