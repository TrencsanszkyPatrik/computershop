<Window x:Class="computershop.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegisterPage" Height="707" Width="491"
        WindowStartupLocation="CenterScreen"
        Background="#f4f6f9">

    <Grid Margin="20">

        <Label Content="Register" HorizontalAlignment="Center" Margin="0,44,0,0"
               VerticalAlignment="Top" HorizontalContentAlignment="Center"
               FontSize="36" FontWeight="Bold" Foreground="#333"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,144,0,0" Width="300">

            <Label Content="Username" FontSize="18" Foreground="#555"/>
            <TextBox x:Name="usernameBox" Height="36" Margin="0,5,0,10" Width="300"
                     FontSize="18" FontStyle="Italic"
                     Background="White" BorderBrush="#ccc" BorderThickness="1" Padding="4"/>

            <Label Content="Full Name" FontSize="18" Foreground="#555"/>
            <TextBox x:Name="fullnameBox" Height="36" Margin="0,5,0,10" Width="300"
                     FontSize="18" FontStyle="Italic"
                     Background="White" BorderBrush="#ccc" BorderThickness="1" Padding="4"/>

            <Label Content="Email" FontSize="18" Foreground="#555"/>
            <TextBox x:Name="emailBox" Height="36" Margin="0,5,0,10" Width="300"
                     FontSize="18" FontStyle="Italic"
                     Background="White" BorderBrush="#ccc" BorderThickness="1" Padding="4"/>

            <Label Content="Password" FontSize="18" Foreground="#555"/>
            <PasswordBox x:Name="passwordBox" Height="36" Width="300" Margin="0,5,0,20"
                         Background="White" BorderBrush="#ccc" BorderThickness="1" Padding="4"/>

            <Button x:Name="RegisterButton" 
                    Content="Register" 
                    Height="62" Width="300"
                    FontSize="26" FontWeight="Bold" FontStyle="Italic"
                    Background="#50c878" Foreground="White" BorderThickness="0"
                    Cursor="Hand"
                    Click="RegisterButton_Click" Margin="0,0,0,10"/>

            <Button x:Name="BackToMain" 
                    Content="Back to login page" 
                    Height="62" Width="300"
                    FontSize="26" FontWeight="Bold" FontStyle="Italic"
                    Background="#4a90e2" Foreground="White" BorderThickness="0"
                    Cursor="Hand"
                    Click="BackToLoginPage_click"/>
        </StackPanel>

    </Grid>
</Window>
