<Window x:Class="computershop.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegisterPage" Height="480" Width="421"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#f4f6f9" Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="382">

            <TextBlock Text="Register" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Username:" Width="152"/>
            <TextBox x:Name="usernameBox" Height="30" Margin="0,5,0,10" Width="161"/>

            <TextBlock Text="Full Name:" Width="152"/>
            <TextBox x:Name="fullnameBox" Height="30" Margin="0,5,0,10" Width="161"/>

            <TextBlock Text="Email:" Width="152"/>
            <TextBox x:Name="emailBox" Height="30" Margin="0,5,0,10" Width="161"/>

            <TextBlock Text="Password:" Width="152"/>
            <PasswordBox x:Name="passwordBox" Height="30" Width="161" Margin="0,5,0,10"/>

            <Button x:Name="RegisterButton" 
                    Content="Register" 
                    Height="40" Width="158" 
                    Background="#50c878" Foreground="White" 
                    Click="RegisterButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
