<Window x:Class="computershop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:computershop"
        mc:Ignorable="d"
        Title="MainWindow" Height="592" Width="491"
        Background="#f4f6f9">

    <Grid Margin="20">
        <Label Content="Login" HorizontalAlignment="Center" Margin="0,44,0,0"
               VerticalAlignment="Top" HorizontalContentAlignment="Center"
               FontSize="36" FontWeight="Bold" Foreground="#333"/>

        <TextBox x:Name="UserName" HorizontalAlignment="Center" Margin="0,166,0,0"
                 Text="Username or Email" VerticalAlignment="Top"
                 Width="199" Height="36" FontSize="18" FontStyle="Italic"
                 Background="White" BorderBrush="#ccc" BorderThickness="1" Padding="4"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,291,0,0">
            <Button Content="Login"
            Height="62" Width="200"
            FontSize="26" FontWeight="Bold"
            FontStyle="Italic"
            Click="login"
            Background="#4a90e2" Foreground="White" BorderThickness="0"
            Cursor="Hand" Margin="0,0,0,10"/>
            <Button Content="Register"
            Height="36" Width="200"
            FontSize="20" FontWeight="Bold"
            FontStyle="Italic"
            Click="registerPage"
            Background="#50c878" Foreground="White" BorderThickness="0"
            Cursor="Hand"/>
        </StackPanel>


        <PasswordBox x:Name="Pass" HorizontalAlignment="Center" Margin="0,236,0,0"
                     VerticalAlignment="Top" Width="200" Height="28"
                     Background="White" BorderBrush="#ccc" BorderThickness="1" Padding="4"/>

        <Label Content="Enter username" HorizontalAlignment="Center" Margin="0,127,0,0"
               VerticalAlignment="Top" Width="198" FontSize="18" Foreground="#555"/>

        <Label Content="Enter password" HorizontalAlignment="Center" Margin="0,202,0,0"
               VerticalAlignment="Top" Width="200" FontSize="18" Foreground="#555"/>

       
    </Grid>
</Window>
